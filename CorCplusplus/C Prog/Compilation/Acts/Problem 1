// Problem 1. Find the sum of all elements in an array:
int main(){
    int sum, setOfNumbers[5] = {10, 20, 30, 40, 50};
    
    printf("Enter 5 integer numbers: \n");
    printf("%d",setOfNumbers[0]);
    printf("%d",setOfNumbers[1]);
    printf("%d",setOfNumbers[2]);
    printf("%d",setOfNumbers[3]);
    printf("%d",setOfNumbers[4]);
    
    sum =  setOfNumbers[0] + setOfNumbers[1] + setOfNumbers[2] + setOfNumbers[3] + setOfNumbers[4]; 
    
    printf("Sum: %d",sum);
    return 0;
}
